		<Command Name="CommandHelp" Id="9999" />
	</Application.Commands>

<!--
		=============================================
		List of the views (aka: "the way to display") 
		=============================================
-->
	
	<Application.Views>
		<Ribbon>	
			<!-- Views for ribbon application menu -->
			<Ribbon.ApplicationMenu>
				<ApplicationMenu CommandName="ApplicationMenu">
					<MenuGroup CommandName="DataManagementGroup">
						<DropDownButton CommandName='CommandDb'>
							<MenuGroup Class='MajorItems'>
								<Button CommandName='CommandDbConnectionRefresh' />
							</MenuGroup>
							<MenuGroup Class='MajorItems'>
								<Button CommandName='CommandDbBackupConfigure' />
								<Button CommandName='CommandDbBackupMakeNow' />
								<Button CommandName='CommandDbBackupApplyNow' />
							</MenuGroup>
						</DropDownButton>
						<DropDownButton CommandName='CommandExports'>
							<MenuGroup Class='MajorItems'> 
								<Button CommandName='CommandExportAccounts' />
								<Button CommandName='CommandExportInvoices' />
								<Button CommandName='CommandExportItems' />
								<Button CommandName='CommandExportPacks' />
								<Button CommandName='CommandExportReservations' />
							</MenuGroup>
						</DropDownButton>
					</MenuGroup>
					<MenuGroup CommandName='ApplicationManagementGroup'>
						<Button CommandName="CommandAbout" />
						<Button CommandName="CommandConfiguration" />
						<Button CommandName="CommandExit" />
					</MenuGroup>
				</ApplicationMenu>
			</Ribbon.ApplicationMenu>
			
			<Ribbon.Tabs>
				<!-- Views for ribbon accounts' tab -->
				<Tab CommandName="AccountsTab">

				</Tab>
				
				<!-- Views for ribbon invoices' tab -->
				<Tab CommandName="InvoicesTab">

				</Tab>
				
				<!-- Views for ribbon items' tab -->
				<Tab CommandName="ItemsTab">

				</Tab>
				
				<!-- Views for ribbon packs' tab -->
				<Tab CommandName="PacksTab">

				</Tab>
				
				<!-- Views for ribbon reservations' tab -->
				<Tab CommandName="ReservationsTab">

				</Tab>
				
				<!-- Views for ribbon restorations' tab -->
				<Tab CommandName="RestorationsTab">
					
				</Tab>
			</Ribbon.Tabs>

			<!-- View for ribbon help's button -->
			<Ribbon.HelpButton>
				<HelpButton CommandName="CommandHelp" />
			</Ribbon.HelpButton>
		</Ribbon>
	</Application.Views>
</Application>
