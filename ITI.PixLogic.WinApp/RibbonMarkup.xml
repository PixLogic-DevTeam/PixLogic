			</Command.LargeImages>
			<Command.SmallImages>
				<Image>Resources/16px/menu_close.bmp</Image>
			</Command.SmallImages>
		</Command>

		<!-- Commands for ribbon accounts' tab [Ids' range: 2000/2999] -->
		<Command Name="AccountsTab" Id="2000"
						 LabelTitle="Comptes" />

		<!-- Commands for ribbon invoices' tab [Ids' range: 3000/3999] -->
