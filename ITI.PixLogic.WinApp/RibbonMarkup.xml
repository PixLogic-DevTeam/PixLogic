						 TooltipDescription="Vérifiez que la base de données est lancée avant d'actualiser la connexion">
			<Command.LargeImages>
				<Image>Resources/32px/menu_database_connection_refresh.bmp</Image>
			</Command.LargeImages>
			<Command.SmallImages>
				<Image>Resources/16px/menu_database_connection_refresh.bmp</Image>
			</Command.SmallImages>
		</Command>
